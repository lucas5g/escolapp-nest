generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Unity {
  id   Int    @id @default(autoincrement())
  name String

  places     Place[]
  modalities Modality[]
  users      User[]
  teams      Team[]

  @@map("unities")
}

model Place {
  id       Int    @id @default(autoincrement())
  name     String
  unity_id Int?

  unity Unity? @relation(fields: [unity_id], references: [id])

  @@map("places")
}

model Modality {
  id               Int    @id @default(autoincrement())
  name             String
  members_quantity Int
  teams_quantity   Int
  unity_id         Int?

  unity Unity? @relation(fields: [unity_id], references: [id])

  teams Team[]

  @@map("modalities")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  unity    Unity? @relation(fields: [unity_id], references: [id])
  unity_id Int?

  @@map("users")
}

enum Genre {
  misto
  mas
  fem
}

model Team {
  id          Int    @id @default(autoincrement())
  name        String
  group       String
  genre       Genre
  modality_id Int?
  unity_id    Int?
  students    Json

  modality    Modality?     @relation(fields: [modality_id], references: [id])
  unity       Unity?        @relation(fields: [unity_id], references: [id])
  // students TeamStudent[]
  TeamStudent TeamStudent[]

  @@map("teams")
}

model TeamStudent {
  id         Int    @id @default(autoincrement())
  team_id    Int
  student_ra String

  teams Team @relation(fields: [team_id], references: [id])

  @@map("teams_students")
}
